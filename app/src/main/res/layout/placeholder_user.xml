<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

        <View
            android:id="@+id/skeleton_image"
            android:layout_alignParentStart="true"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/skeleton_background"
            tools:src="@tools:sample/avatars"/>

        <View
            android:id="@+id/skeleton_text_view_1"
            android:layout_width="144dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/skeleton_image"
            android:background="@drawable/skeleton_background" />

        <View
            android:id="@+id/skeleton_text_view_2"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/skeleton_image"
            android:background="@drawable/skeleton_background"
            android:layout_below="@id/skeleton_text_view_1" />

</RelativeLayout>